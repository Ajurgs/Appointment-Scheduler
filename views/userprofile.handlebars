<div class="container">
  <section class="card my-3" style="max-width:800px">
    <div class="card-header  d-flex justify-content-between">
      <h2>Update User Profile</h2>
      <h2><a href="/account" style="text-decoration: none;">X</a></h2>
    </div>
    <form id="search-user-form" class="card-body d-flex flex-column align-items-center">
      <div class="d-flex mb-3">
        <fieldset class="d-flex flex-column">
        <label for="email-search" >Enter the email of the user you'd like to update:</label>
        <input name="email-search" type="input" id="email-search" />
        </fieldset>
      </div>
      <div>
        <button
          type="submit"
          id="search-btn"
          class="btn btn-primary my-3"
        >Update User</button>
      </div>
    </form>
    <form id="profile-form" class="card-body d-flex flex-column align-items-center">
      <input type='hidden' name='userId' id='id'/>  
      <div class="d-flex mb-3" >
        <fieldset class="d-flex flex-column" >
        <label for="firstName" >First Name:</label>
        <input name="firstName" type="text" id="firstName"/>
        </fieldset>
      </div>
      <div class="d-flex mb-3">
        <fieldset class="d-flex flex-column">
        <label for="lastName" >Last Name:</label>
        <input name="lastName" type="text" id="lastName">{{ lastName }}</input>
        </fieldset>
      </div>
      <div class="d-flex mb-3">
        <fieldset class="d-flex flex-column">
        <label for="email-profile" >Email:</label>
        <input name="email-profile" type="email" id="email-profile" >{{ email }}</input>
        </fieldset>
      </div>
      <div class="d-flex mb-3">
        <fieldset class="d-flex flex-column">
        <label for="phone-profile">Phone Number:</label>
        <input name="phone-profile" type="phone" id="phone-profile" >{{ email }}</input>
        </fieldset>
      </div>
      <div class="d-flex mb-3" >
        <fieldset class="d-flex flex-column" >
        <label for="userRole" >Role:</label>
        <input name="userRole" type="text" id="userRole"/>
        </fieldset>
      </div>
      <div>
        <button
          type="submit"
          id="update-profile-btn"
      class="btn btn-primary my-3"
        >Update User</button>
      </div>
    </form>
  </section>
</div>

<script src="/js/updateprofile.js"></script>